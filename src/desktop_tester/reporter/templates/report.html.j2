<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DesktopTester Report</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #0d1117;
            color: #c9d1d9;
            line-height: 1.6;
        }
        .container { max-width: 1200px; margin: 0 auto; padding: 24px; }

        /* Header */
        .header {
            background: #161b22;
            border: 1px solid #30363d;
            border-radius: 8px;
            padding: 24px;
            margin-bottom: 24px;
        }
        .header h1 {
            color: #f0f6fc;
            font-size: 24px;
            margin-bottom: 4px;
        }
        .header .meta {
            color: #8b949e;
            font-size: 13px;
        }

        /* Summary bar */
        .summary {
            display: flex;
            gap: 16px;
            margin-bottom: 24px;
        }
        .summary-card {
            flex: 1;
            background: #161b22;
            border: 1px solid #30363d;
            border-radius: 8px;
            padding: 16px;
            text-align: center;
        }
        .summary-card .number {
            font-size: 36px;
            font-weight: bold;
        }
        .summary-card .label {
            font-size: 12px;
            color: #8b949e;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .summary-card.passed .number { color: #3fb950; }
        .summary-card.failed .number { color: #f85149; }
        .summary-card.errors .number { color: #d29922; }
        .summary-card.total .number { color: #58a6ff; }
        .summary-card.duration .number { color: #8b949e; font-size: 24px; }

        /* Progress bar */
        .progress-bar {
            height: 8px;
            background: #21262d;
            border-radius: 4px;
            margin-bottom: 24px;
            overflow: hidden;
            display: flex;
        }
        .progress-bar .passed-bar { background: #3fb950; }
        .progress-bar .failed-bar { background: #f85149; }
        .progress-bar .error-bar { background: #d29922; }

        /* Filter buttons */
        .filters {
            display: flex;
            gap: 8px;
            margin-bottom: 16px;
        }
        .filter-btn {
            background: #21262d;
            border: 1px solid #30363d;
            color: #c9d1d9;
            padding: 6px 16px;
            border-radius: 20px;
            cursor: pointer;
            font-size: 13px;
            transition: all 0.15s;
        }
        .filter-btn:hover { background: #30363d; }
        .filter-btn.active { background: #388bfd26; border-color: #58a6ff; color: #58a6ff; }

        /* Test cards */
        .test-card {
            background: #161b22;
            border: 1px solid #30363d;
            border-radius: 8px;
            margin-bottom: 12px;
            overflow: hidden;
        }
        .test-header {
            display: flex;
            align-items: center;
            padding: 14px 16px;
            cursor: pointer;
            user-select: none;
            transition: background 0.15s;
        }
        .test-header:hover { background: #1c2128; }
        .test-status {
            display: inline-block;
            padding: 2px 10px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: 600;
            margin-right: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        .status-passed { background: #23863626; color: #3fb950; }
        .status-failed { background: #f8514926; color: #f85149; }
        .status-error { background: #d2992226; color: #d29922; }
        .test-name { flex: 1; font-weight: 600; font-size: 15px; }
        .test-file { color: #484f58; font-size: 12px; margin-left: 8px; font-weight: 400; }
        .test-meta { display: flex; align-items: center; gap: 16px; }
        .test-step-count { color: #8b949e; font-size: 12px; }
        .test-duration { color: #8b949e; font-size: 13px; }
        .test-toggle {
            color: #484f58;
            margin-left: 12px;
            font-size: 12px;
            transition: transform 0.2s;
        }
        .test-card.expanded .test-toggle { transform: rotate(90deg); }

        /* Steps table */
        .test-steps {
            border-top: 1px solid #30363d;
            display: none;
        }
        .test-card.expanded .test-steps { display: block; }

        .step-row {
            display: flex;
            align-items: center;
            padding: 10px 16px 10px 20px;
            border-bottom: 1px solid #21262d;
            font-size: 13px;
            transition: background 0.1s;
        }
        .step-row:last-child { border-bottom: none; }
        .step-row:hover { background: #1c212833; }

        .step-number {
            color: #484f58;
            font-size: 11px;
            width: 28px;
            flex-shrink: 0;
            text-align: right;
            margin-right: 12px;
        }
        .step-status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            margin-right: 12px;
            flex-shrink: 0;
        }
        .dot-passed { background: #3fb950; }
        .dot-failed { background: #f85149; }
        .dot-error { background: #d29922; }
        .dot-skipped { background: #484f58; }

        .step-info { flex: 1; min-width: 0; }
        .step-desc {
            color: #c9d1d9;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .step-id {
            color: #484f58;
            font-size: 11px;
            font-family: 'SF Mono', SFMono-Regular, Consolas, monospace;
        }
        .step-duration {
            color: #8b949e;
            width: 70px;
            text-align: right;
            flex-shrink: 0;
            font-size: 12px;
        }

        /* Error detail */
        .step-error {
            padding: 10px 16px 10px 52px;
            background: #f8514908;
            border-left: 3px solid #f85149;
            margin: 0 12px 8px 12px;
            border-radius: 4px;
            color: #f85149;
            font-size: 12px;
            font-family: 'SF Mono', SFMono-Regular, Consolas, monospace;
            line-height: 1.5;
            word-break: break-word;
        }

        /* Screenshot */
        .step-screenshot {
            padding: 8px 16px 12px 52px;
            border-bottom: 1px solid #21262d;
        }
        .step-screenshot img {
            max-width: 100%;
            max-height: 400px;
            border-radius: 6px;
            border: 1px solid #30363d;
            cursor: pointer;
            transition: opacity 0.15s;
        }
        .step-screenshot img:hover { opacity: 0.85; }

        /* Lightbox */
        .lightbox {
            display: none;
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(0, 0, 0, 0.85);
            z-index: 1000;
            justify-content: center;
            align-items: center;
            cursor: pointer;
        }
        .lightbox.active { display: flex; }
        .lightbox img {
            max-width: 95vw;
            max-height: 95vh;
            border-radius: 8px;
        }

        /* Footer */
        .footer {
            text-align: center;
            padding: 32px;
            color: #484f58;
            font-size: 12px;
        }

        @media (max-width: 768px) {
            .summary { flex-wrap: wrap; }
            .summary-card { min-width: calc(50% - 8px); }
            .test-file { display: none; }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>DesktopTester Report</h1>
            <div class="meta">
                Generated {{ generated_at }}
                &nbsp;&middot;&nbsp;
                {{ summary.total }} test{{ "s" if summary.total != 1 }}
                &nbsp;&middot;&nbsp;
                {{ "%.1f"|format(summary.duration_ms / 1000) }}s total
            </div>
        </div>

        <div class="summary">
            <div class="summary-card total">
                <div class="number">{{ summary.total }}</div>
                <div class="label">Total</div>
            </div>
            <div class="summary-card passed">
                <div class="number">{{ summary.passed }}</div>
                <div class="label">Passed</div>
            </div>
            <div class="summary-card failed">
                <div class="number">{{ summary.failed }}</div>
                <div class="label">Failed</div>
            </div>
            <div class="summary-card errors">
                <div class="number">{{ summary.errors }}</div>
                <div class="label">Errors</div>
            </div>
            <div class="summary-card duration">
                <div class="number">{{ "%.1f"|format(summary.duration_ms / 1000) }}s</div>
                <div class="label">Duration</div>
            </div>
        </div>

        {% if summary.total > 0 %}
        <div class="progress-bar">
            {% if summary.passed > 0 %}
            <div class="passed-bar" style="width: {{ (summary.passed / summary.total * 100)|round(1) }}%"></div>
            {% endif %}
            {% if summary.failed > 0 %}
            <div class="failed-bar" style="width: {{ (summary.failed / summary.total * 100)|round(1) }}%"></div>
            {% endif %}
            {% if summary.errors > 0 %}
            <div class="error-bar" style="width: {{ (summary.errors / summary.total * 100)|round(1) }}%"></div>
            {% endif %}
        </div>
        {% endif %}

        <div class="filters">
            <button class="filter-btn active" onclick="filterTests('all')">All ({{ summary.total }})</button>
            <button class="filter-btn" onclick="filterTests('passed')">Passed ({{ summary.passed }})</button>
            <button class="filter-btn" onclick="filterTests('failed')">Failed ({{ summary.failed }})</button>
            {% if summary.errors > 0 %}
            <button class="filter-btn" onclick="filterTests('error')">Errors ({{ summary.errors }})</button>
            {% endif %}
        </div>

        {% for test in summary.test_results %}
        <div class="test-card{% if test.status != 'passed' %} expanded{% endif %}" data-status="{{ test.status }}">
            <div class="test-header" onclick="toggleTest(this)">
                <span class="test-status status-{{ test.status }}">
                    {{ test.status }}
                </span>
                <span class="test-name">
                    {{ test.test_name }}
                    <span class="test-file">{{ test.test_file | basename if test.test_file else "" }}</span>
                </span>
                <div class="test-meta">
                    <span class="test-step-count">{{ test.step_results | length }} steps</span>
                    <span class="test-duration">{{ "%.0f"|format(test.duration_ms) }}ms</span>
                    <span class="test-toggle">&#9654;</span>
                </div>
            </div>
            <div class="test-steps">
                {% for step in test.step_results %}
                <div class="step-row">
                    <span class="step-number">{{ loop.index }}</span>
                    <span class="step-status-dot dot-{{ step.status }}"></span>
                    <div class="step-info">
                        <div class="step-desc">{{ step.description if step.description else step.step_id }}</div>
                        <div class="step-id">{{ step.step_id }}</div>
                    </div>
                    <span class="step-duration">{{ "%.0f"|format(step.duration_ms) }}ms</span>
                </div>
                {% if step.error_message %}
                <div class="step-error">{{ step.error_message }}</div>
                {% endif %}
                {% if step.step_id in screenshots and screenshots[step.step_id] %}
                <div class="step-screenshot">
                    <img src="{{ screenshots[step.step_id] }}"
                         alt="Screenshot for {{ step.step_id }}"
                         onclick="openLightbox(this.src)">
                </div>
                {% endif %}
                {% endfor %}
            </div>
        </div>
        {% endfor %}

        <div class="footer">
            Generated by DesktopTester v0.1.0
        </div>
    </div>

    <div class="lightbox" id="lightbox" onclick="closeLightbox()">
        <img id="lightbox-img" src="" alt="Screenshot">
    </div>

    <script>
        function toggleTest(header) {
            const card = header.closest('.test-card');
            card.classList.toggle('expanded');
        }

        function filterTests(status) {
            document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            document.querySelectorAll('.test-card').forEach(card => {
                card.style.display = (status === 'all' || card.dataset.status === status) ? '' : 'none';
            });
        }

        function openLightbox(src) {
            const lb = document.getElementById('lightbox');
            document.getElementById('lightbox-img').src = src;
            lb.classList.add('active');
        }

        function closeLightbox() {
            document.getElementById('lightbox').classList.remove('active');
        }

        document.addEventListener('keydown', e => {
            if (e.key === 'Escape') closeLightbox();
        });
    </script>
</body>
</html>
